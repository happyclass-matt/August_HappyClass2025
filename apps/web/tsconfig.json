{
  "extends": "../../packages/config/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "paths": {
      "@happyclass/ui": [
        "../../packages/ui/src/index.ts"
      ],
      "@happyclass/ui/*": [
        "../../packages/ui/src/*"
      ]
    },
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "playwright.config.ts",
    "tests"
  ]
}
